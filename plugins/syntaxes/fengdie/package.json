{
  "name": "schema-language",
  "displayName": "schema-language",
  "description": "fengdie schema language highlight",
  "version": "0.0.1",
  "publisher": "meowtec",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:schema"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "Hello World"
      }
    ],
    "languages": [{
        "id": "schema",
        "aliases": ["schema"],
        "extensions": [".schema"],
        "configuration": "./language-configuration.json"
    }],
    "grammars": [{
        "language": "schema",
        "scopeName": "source.schema",
        "path": "./syntaxes/schema.tmLanguage.json"
    }],
    "snippets": [{
        "language": "schema",
        "path": "./snippets/schema.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "jison": "jison parser/schema.yy parser/schema.l -o parser/schema.js"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "jison": "^0.4.17",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^3.3.0",
    "vscode-languageserver": "^3.3.0"
  }
}
