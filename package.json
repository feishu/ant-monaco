{
  "name": "ant-monaco",
  "version": "0.8.0-beta-1",
  "description": "Ant monaco with vscode-textmate. This module can only run under node runtime",
  "main": "lib/index.min.js",
  "scripts": {
    "build:render": "webpack --config ./webpack.render.config.js",
    "build:main": "webpack --config ./webpack.main.config.js",
    "build": "npm run build:render && npm run build:main",
    "watch:render": "webpack --config ./webpack.render.config.js -w",
    "watch:main": "webpack --config ./webpack.main.config.js -w",
    "watch": "npm run watch:main & npm run watch:render",
    "minify:render": "uglifyjs lib/index.js -o lib/index.min.js",
    "minify:main": "uglifyjs lib/main.js -o lib/main.min.js",
    "minify": "npm run minify:main && npm run minify:render && npm run clean",
    "clean": "node scripts/clean.js",
    "js": "node scripts/javascript.js && npm run js-extra",
    "js-extra": "node scripts/js-extra.js",
    "api": "node scripts/completions.js $site",
    "sync": "node scripts/lark-sdk.js",
    "prepublish": "npm run minify"
  },
  "keywords": [
    "monaco",
    "vscode-textmate",
    "ant"
  ],
  "author": "munong",
  "license": "MIT",
  "dependencies": {
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "vscode-textmate": "^3.1.4"
  },
  "devDependencies": {
    "@types/node": "^7.0.22",
    "ant-csslint": "^1.0.5",
    "ant-monaco-editor": "0.0.1",
    "chalk": "^1.1.3",
    "copy-webpack-plugin": "^4.0.1",
    "electron": "1.6.x",
    "fs-extra": "^3.0.1",
    "jshint": "^2.9.4",
    "mark-twain": "^1.1.6",
    "raw-loader": "^0.5.1",
    "request": "^2.81.0",
    "ts-loader": "^2.1.0",
    "typescript": "^2.3.4",
    "uglify-es": "^3.0.13",
    "vscode": "^1.1.0",
    "vscode-css-languageservice-commonjs": "0.0.1",
    "vscode-languageserver": "^3.2.2",
    "vscode-languageserver-types": "^3.2.0",
    "vscode-languageserver-types-commonjs": "^0.0.1",
    "webpack": "^2.6.1"
  }
}
